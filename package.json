{
  "name": "assistant-ia-electron",
  "version": "1.0.0",
  "private": true,
  "description": "Chatbot FidOuest (Electron + Vite)",
  "author": "Tristan Boureau",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "clean": "rimraf dist-electron && rimraf frontend/dist",
    "dev": "vite",
    "dev:full": "cross-env START_BACKEND=1 vite",
    "build": "npm run clean && vite build",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.tristan.assistantia",
    "productName": "Chatbot FidOuest",
    "asar": true,
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "extraResources": [
      {
        "from": "build/.env",
        "to": ".env"
      },
      {
        "from": "build/icon.ico",
        "to": "icon.ico"
      }
    ],
    "files": [
      "dist-electron/**",
      "frontend/dist/**",
      "frontend/public/assets/**",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist-electron/main.js"
    },
    "win": {
      "signAndEditExecutable": true,
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "oneClick": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@mistralai/mistralai": "^1.14.0",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "form-data": "^4.0.5",
    "mammoth": "^1.11.0",
    "mssql": "^11.0.1",
    "multer": "^2.0.2",
    "openai": "^6.8.1",
    "pdf-parse": "^2.4.5",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@vitejs/plugin-react": "^4.2.0",
    "cross-env": "^10.1.0",
    "electron": "^31.0.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "rimraf": "^5.0.0",
    "typescript": "^5.6.0",
    "vite": "^7.2.0",
    "vite-plugin-electron": "^0.28.0"
  }
}
